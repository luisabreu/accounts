@model Accounts.ViewModel.UserInfoViewModel

<div class="panel panel-primary margin-bottom-40">
    <div class="panel-heading">
        <h3 class="panel-title">
            <i class="fa fa-tasks"></i> Basic Form
        </h3>
    </div>
    <div class="panel-body">
        <form class="margin-bottom-40" role="form">
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox"> Check me out
                </label>
            </div>
            <button type="submit" class="btn-u btn-u-blue">Submit</button>
        </form>
    </div>
</div>